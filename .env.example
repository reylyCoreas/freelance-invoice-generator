# Business Information
BUSINESS_NAME="Your Business Name"
BUSINESS_EMAIL="your-email@example.com"
BUSINESS_ADDRESS="123 Business St, City, State 12345"

# Tax and Currency Settings
TAX_RATE=0.08
CURRENCY="USD"

# Server Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS="http://localhost:3000"

# Export Settings
DEFAULT_EXPORT_FORMAT="PDF"

# Email Configuration (Optional - uses Ethereal Email for development if not set)
# For production, configure with your email provider (Gmail, SendGrid, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# JWT Authentication (Optional - needed if you implement auth)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration (Optional - currently using in-memory storage)
# Uncomment and configure if you want to add a real database
# DATABASE_URL=postgresql://user:password@localhost:5432/invoice_db
# MONGO_URI=mongodb://localhost:27017/invoice_generator

# Additional Configuration
LOG_LEVEL=info
MAX_PDF_AGE_HOURS=24
ENABLE_CORS=true
